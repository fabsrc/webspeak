- @translations = @word.translations + @word.translation_of 
.well.well-sm
  - trans = Array.new(1, @word.language.code)
  - if @translations.any?
    - @translations.each do |translation|
      - trans.push(translation.language.code)
      = link_to translation.language.code.upcase, word_path(translation)
  - Language.all.each do |language|
    - unless trans.include?(language.code)
      = link_to "New " + language.name + " translation", "/#{@word.slug}/#{language.code}"

.well.well-lg
  %h1= @word.title
  %p= @word.body
  
  = link_to 'Edit', edit_word_path(@word), class: "btn btn-default btn-raised"